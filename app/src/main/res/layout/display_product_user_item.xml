<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="170dp"
android:background="@drawable/bar"
android:layout_marginBottom="8dp"
android:layout_height="254dp">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/product_image_home"
    android:layout_width="159dp"
    android:layout_height="198dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.125"
    app:shapeAppearanceOverlay="@style/RoundedImage"/>


    <TextView
        android:id="@+id/Name_of_products"
        android:layout_width="145dp"
        android:layout_height="20dp"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image_home"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/product_price_add_item"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/C35314"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Name_of_products"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Name_of_products"
        app:layout_constraintTop_toBottomOf="@+id/Name_of_products"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/sold_product_home"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jost_regular"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toEndOf="@+id/product_price_add_item"
        app:layout_constraintTop_toBottomOf="@+id/Name_of_products"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>