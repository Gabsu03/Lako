<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logo_Page_Activity2">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="415dp"
        android:layout_height="844dp"
        android:background="@drawable/lako_welcome_gif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <ImageView
        android:layout_width="286dp"
        android:layout_height="286dp"
        android:background="@drawable/new_welcome_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/logo_sign_up_button"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:background="@drawable/logo"
        android:elevation="17dp"
        android:fontFamily="@font/koho_regular"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        android:onClick="Sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/logo_sign_in_button"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:onClick="Sign_In"
        android:background="@drawable/logo"
        android:elevation="17dp"
        android:fontFamily="@font/koho_regular"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/logo_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koho_bold"
        android:text="About Us"
        android:onClick="about_us"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>
