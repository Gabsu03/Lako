<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bar"
    android:layout_marginBottom="8dp"
    android:layout_height="137dp">


    <TextView
        android:id="@+id/nameTextView_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_semibold"
        android:text="Name"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTextView_checkout"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/labelTextView_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Label"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        android:fontFamily="@font/jost_semibold"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phoneTextView_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Phone"
        android:textColor="@color/C35314"
        android:fontFamily="@font/jost_regular"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/nameTextView_checkout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameTextView_checkout"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView_checkout" />

    <TextView
        android:id="@+id/fullAddressTextView_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Address"
        android:fontFamily="@font/jost_semibold"
        android:textSize="15dp"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        android:textColor="@color/darkbrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/phoneTextView_checkout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/phoneTextView_checkout"
        app:layout_constraintTop_toBottomOf="@+id/phoneTextView_checkout"
        app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>
