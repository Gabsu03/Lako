<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".Main_Shop_Seller_Products">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/darkbrown"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="370dp"
        android:layout_height="180dp"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture_shop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image_upload"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.084"
        app:shapeAppearanceOverlay="@style/CircularShape"/>

    <TextView
        android:id="@+id/Name_of_seller_shop"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:fontFamily="@font/koho_medium"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/darkbrown"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/name_of_place"
        android:layout_width="94dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_light"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/description_of_shop"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/Name_of_seller_shop" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:fontFamily="@font/jost_regular"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture_shop"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/description_of_shop"
        android:layout_width="235dp"
        android:layout_height="107dp"
        android:fontFamily="@font/jost_regular"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:maxLines="6"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.835" />

    <Button
        android:id="@+id/edit_profile_seller"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/edit_wish_icon"
        android:onClick="edit_button_shop_seller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />

    <TextView
        android:id="@+id/products_seller_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:fontFamily="@font/koho_bold"
        android:text="Products"
        android:textAlignment="center"
        android:textColor="@color/FF5C01"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.47"
        tools:ignore="OnClick" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_display_recycler_vieww"
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/analytics_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.182"
        tools:listitem="@layout/display_products_item_seller"/>

    <TextView
        android:id="@+id/categories_shop"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:fontFamily="@font/koho_bold"
        android:onClick="categories_btn"
        android:text="Categories"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.47"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/seller_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/reset_email_btn"
        android:drawableStart="@drawable/chat_icon"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/darkbrown"
        app:layout_constraintBottom_toTopOf="@+id/list_product_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories_shop"
        app:layout_constraintVertical_bias="0.949" />

    <Button
        android:id="@+id/switch_account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image_upload"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="switchAccount"
        android:textColor="@color/darkbrown"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.76"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/analytics_btn"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:background="@color/darkbrown"
        android:drawableTop="@drawable/analytics"
        android:fontFamily="@font/koho_medium"
        android:onClick="analytics"
        android:textColor="@color/white"
        android:text="Analytics"
        android:textSize="15dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/orders_btn"
        android:layout_width="134dp"
        android:layout_height="65dp"
        android:background="@color/light_orange"
        android:drawableLeft="@drawable/orderss"
        android:fontFamily="@font/koho_medium"
        android:onClick="orders"
        android:text="Orders"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />


    <Button
        android:id="@+id/list_product_btn"
        android:layout_width="144dp"
        android:layout_height="65dp"
        android:background="@color/green"
        android:drawableLeft="@drawable/list_product"
        android:fontFamily="@font/koho_medium"
        android:onClick="list_product"
        android:text="List Product"
        android:textSize="15dp"
        android:paddingLeft="7dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>