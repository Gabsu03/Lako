<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="374dp"
    android:layout_height="200dp"
    android:background="@drawable/bar">

    <ImageView
        android:id="@+id/imageView68"
        android:layout_width="350dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView68"
        app:layout_constraintEnd_toEndOf="@+id/imageView68"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/imageView68"
        app:layout_constraintTop_toTopOf="@+id/imageView68"
        app:layout_constraintVertical_bias="0.100"
        app:shapeAppearanceOverlay="@style/CircularShape" />

    <!--- only 200 words for feedback-->

    <ImageView
        android:id="@+id/imageView69"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="@+id/imageView68"
        app:layout_constraintEnd_toEndOf="@+id/imageView68"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/imageView68"
        app:layout_constraintTop_toTopOf="@+id/imageView68"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:fontFamily="@font/jost_regular"
        android:textAlignment="textStart"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView69"
        app:layout_constraintEnd_toEndOf="@+id/imageView69"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/imageView69"
        app:layout_constraintTop_toTopOf="@+id/imageView69"
        app:layout_constraintVertical_bias="0.10" />

    <ImageView
        android:id="@+id/feedback_stars"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView69"
        app:layout_constraintEnd_toEndOf="@+id/imageView69"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/imageView69"
        app:layout_constraintTop_toTopOf="@+id/imageView69"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/feedback_user"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:fontFamily="@font/jost_regular"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:textAlignment="textStart"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView69"
        app:layout_constraintEnd_toEndOf="@+id/imageView69"
        app:layout_constraintStart_toStartOf="@+id/imageView69"
        app:layout_constraintTop_toTopOf="@+id/imageView69"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>