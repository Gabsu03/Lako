<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".User_View_Product">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/darkbrown" />


    <Button
        android:id="@+id/view_product_back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/vector"
        android:onClick="user_view_product_btn"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.705"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:fontFamily="@font/jost_regular"
        android:text="Feedbacks"
        android:textAlignment="textStart"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.056" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedback_display_user"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/add_to_cart_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.823"
        tools:listitem="@layout/feedback_display_user_item" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="374dp"
        android:layout_height="150dp"
        android:background="@color/transaprent_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.034" />

    <ImageView
        android:id="@+id/image_product_display"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18" />

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="374dp"
        android:layout_height="78dp"
        android:background="@drawable/bar_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/name_product_display_user"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:fontFamily="@font/koho_medium"
        android:textAlignment="textStart"
        android:textColor="@color/darkbrown"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toTopOf="@+id/imageView53"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/price_product_display_user"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:fontFamily="@font/jost_medium"
        android:textAlignment="textStart"
        android:textColor="@color/C35314"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toBottomOf="@+id/name_product_display_user"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/sold_product_display_user"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_regular"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/imageView53"
        app:layout_constraintTop_toBottomOf="@+id/name_product_display_user"
        app:layout_constraintVertical_bias="0.503" />

    <Button
        android:id="@+id/wish_product_display_user"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:background="@drawable/wishlist"
        app:layout_constraintBottom_toBottomOf="@+id/imageView53"
        app:layout_constraintEnd_toEndOf="@+id/imageView53"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toEndOf="@+id/name_product_display_user"
        app:layout_constraintTop_toTopOf="@+id/imageView53"
        app:layout_constraintVertical_bias="0.245" />

    <ImageView
        android:id="@+id/imageView55"
        android:layout_width="374dp"
        android:layout_height="180dp"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView53"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:layout_width="44dp"
        android:layout_height="13dp"
        android:fontFamily="@font/jost_regular"
        android:text="Description"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/description_product_display_user"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:fontFamily="@font/jost_light"
        android:maxLines="4"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="55dp"
        android:layout_height="13dp"
        android:fontFamily="@font/jost_regular"
        android:text="Specification"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.58" />

    <TextView
        android:id="@+id/specification_product_display_user"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_light"
        android:maxLines="4"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="13dp"
        android:fontFamily="@font/jost_regular"
        android:text="Category"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.838" />

    <TextView
        android:id="@+id/category_product_display_user"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_light"
        android:maxLines="4"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView55"
        app:layout_constraintEnd_toEndOf="@+id/imageView55"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.97" />

    <ImageView
        android:id="@+id/imageView57"
        android:layout_width="374dp"
        android:layout_height="72dp"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView55"
        app:layout_constraintVertical_bias="0.053" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture_seller_display_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView57"
        app:layout_constraintEnd_toEndOf="@+id/imageView57"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/imageView57"
        app:layout_constraintTop_toTopOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.5"
        app:shapeAppearanceOverlay="@style/CircularShape" />

    <TextView
        android:id="@+id/seller_name_display_user"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:fontFamily="@font/koho_medium"
        android:textAlignment="textStart"
        android:textColor="@color/darkbrown"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView57"
        app:layout_constraintEnd_toEndOf="@+id/imageView57"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toEndOf="@+id/profile_picture_seller_display_user"
        app:layout_constraintTop_toTopOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.211" />

    <TextView
        android:id="@+id/seller_location_display_user"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:fontFamily="@font/jost_light"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView57"
        app:layout_constraintEnd_toEndOf="@+id/imageView57"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="@+id/imageView57"
        app:layout_constraintTop_toTopOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/visit_profile_btn"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:background="@drawable/reset_email_btn"
        android:text="Visit Profile"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/koho_bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView57"
        app:layout_constraintEnd_toEndOf="@+id/imageView57"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="@+id/imageView57"
        app:layout_constraintTop_toTopOf="@+id/imageView57"
        app:layout_constraintVertical_bias="0.5" />
    

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:background="@color/darkbrown"
        android:drawableTop="@drawable/cart"
        android:fontFamily="@font/koho_medium"
        android:onClick="Add to Cart"
        android:textColor="@color/white"
        android:text="Add to Cart"
        android:textSize="15dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/message_seller_btn"
        android:layout_width="134dp"
        android:layout_height="65dp"
        android:background="@color/light_orange"
        android:drawableTop="@drawable/chat_seller"
        android:gravity="center"
        android:onClick="message_seller"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_to_cart_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buy_now_btn"
        android:layout_width="144dp"
        android:layout_height="65dp"
        android:background="@color/green"
        android:fontFamily="@font/koho_bold"
        android:onClick="Buy Now"
        android:paddingLeft="7dp"
        android:text="Buy Now"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="OnClick" />
</androidx.constraintlayout.widget.ConstraintLayout>