<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".Profile_Settings_information">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="409dp"
        android:layout_height="230dp"
        android:background="@drawable/lako_header"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="7dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/darkbrown"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:fontFamily="@font/koho_bold"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.833"
        tools:ignore="MissingConstraints" />

    <!-- Upload Image -->

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/vector"
        android:onClick="profile_back"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.366"
        tools:ignore="OnClick" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/UploadImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/image_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.485"
        app:shapeAppearanceOverlay="@style/CircularShape"/>

    <TextView
        android:id="@+id/username_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/koho_bold"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/UploadImage"
        app:layout_constraintStart_toStartOf="@+id/UploadImage"
        app:layout_constraintTop_toBottomOf="@+id/UploadImage" />

    <Button
        android:id="@+id/edit_profile_button"
        android:onClick="edit_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/edit_wish_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/UploadImage"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_info"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="First Name"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastname_information"
        app:layout_constraintVertical_bias="0.043"/>

    <TextView
        android:id="@+id/lastname_information"
        android:layout_width="321dp"
        android:layout_height="43dp"
        android:background="@drawable/bar"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textSize="14dp"
        android:paddingTop="10dp"
        android:textColor="@color/A84710"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/firstname_information"
        android:layout_width="321dp"
        android:layout_height="43dp"
        android:background="@drawable/bar"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/A84710"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="78dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Last Name"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_information"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstname_information"
        app:layout_constraintVertical_bias="0.043"/>

    <TextView
        android:id="@+id/email_information"
        android:layout_width="321dp"
        android:layout_height="43dp"
        android:background="@drawable/bar"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/A84710"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/username_information"
        android:layout_width="321dp"
        android:layout_height="43dp"
        android:background="@drawable/bar"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:paddingTop="10dp"
        android:textColor="@color/A84710"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.02" />

</androidx.constraintlayout.widget.ConstraintLayout>