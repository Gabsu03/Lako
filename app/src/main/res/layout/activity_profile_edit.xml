<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Edit"
    android:background="@color/primary"
    tools:layout_editor_absoluteX="33dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="409dp"
        android:layout_height="230dp"
        android:background="@drawable/lako_header"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="7dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/darkbrown"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:fontFamily="@font/koho_bold"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.833"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/UploadImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/image_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/image_upload_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cameraa"
        app:layout_constraintBottom_toBottomOf="@+id/UploadImage"
        app:layout_constraintEnd_toEndOf="@+id/UploadImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UploadImage"
        app:layout_constraintTop_toTopOf="@+id/UploadImage"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/koho_bold"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/UploadImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UploadImage"
        app:layout_constraintTop_toBottomOf="@+id/UploadImage" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/username_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/display_name"
        app:layout_constraintVertical_bias="0.894" />

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:background="@drawable/email_reset"
        android:fontFamily="@font/jost_medium"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/C35314"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Last Name"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />


    <EditText
        android:id="@+id/Last_name_edit"
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:background="@drawable/email_reset"
        android:fontFamily="@font/jost_medium"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/C35314"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="First Name"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />


    <EditText
        android:id="@+id/first_name_edit"
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:background="@drawable/email_reset"
        android:fontFamily="@font/jost_medium"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/C35314"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />


    <TextView
        android:id="@+id/textView17"
        android:layout_width="47dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_semibold"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:background="@drawable/email_reset"
        android:fontFamily="@font/jost_medium"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/C35314"
        android:paddingLeft="7dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <Button
        android:id="@+id/save_edit_profile"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="@drawable/reset_email_btn"
        android:fontFamily="@font/koho_bold"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

    <ProgressBar
        android:id="@+id/progress_bar_edit_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:elevation="7dp"
        android:visibility="gone"
        android:indeterminateTint="@color/darkbrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/save_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/save_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/save_edit_profile"
        app:layout_constraintVertical_bias="0.204"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>