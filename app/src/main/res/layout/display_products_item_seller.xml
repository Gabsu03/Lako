<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="181dp"
    android:background="@drawable/bar"
    android:layout_marginBottom="8dp"
    android:layout_height="254dp">

    <ImageView
        android:id="@+id/product_imageeee"
        android:layout_width="159dp"
        android:layout_height="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/Name_of_products"
        android:layout_width="145dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/darkbrown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/product_imageeee"
        app:layout_constraintStart_toStartOf="@+id/product_imageeee"
        app:layout_constraintTop_toBottomOf="@+id/product_imageeee"
        app:layout_constraintVertical_bias="0.329" />

    <TextView
        android:id="@+id/product_price_add_item"
        android:layout_width="145dp"
        android:layout_height="15dp"
        android:fontFamily="@font/jost_medium"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/C35314"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Name_of_products"
        app:layout_constraintStart_toStartOf="@+id/Name_of_products"
        app:layout_constraintTop_toBottomOf="@+id/Name_of_products"
        app:layout_constraintVertical_bias="0.3" />


</androidx.constraintlayout.widget.ConstraintLayout>

